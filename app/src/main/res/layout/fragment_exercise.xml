<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.exercise.ExerciseFragment"
    android:background="#DCDCDD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/bRun"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/round_shape"
            android:scaleType="centerInside"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/ic_run" />

        <ImageButton
            android:id="@+id/bWeight"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/round_shape"
            android:layout_marginTop="25dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/icons8_deadlift_50" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <TextView
            android:id="@+id/tvStepCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steps: 0"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="25dp" />


        <Button
            android:id="@+id/bSaveSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Save Steps" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/step_history_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp" />
        <Button
            android:id="@+id/bExerciseAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Exercise Alarm"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/step_history_recycler_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
</LinearLayout>